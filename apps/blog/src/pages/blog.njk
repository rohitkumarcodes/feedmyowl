{# Blog index with title-only stream rows (intentional project override). #}

<section class="stream-index">
  <h1>Blog</h1>

  {% set postslist = collections.posts | reverse %}
  {% if postslist.length %}
    <ul class="stream-list">
      {% for post in postslist %}
        <li class="stream-item">
          <a href="{{ post.url }}" class="stream-link">{{ post.data.title }}</a>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No posts yet.</p>
  {% endif %}
</section>
