{# Blog index as a quiet vertical stream: title, date, and substantial excerpt. #}

<section class="stream-index">
  <h1>Blog</h1>

  {% set postslist = collections.posts | reverse %}
  {% if postslist.length %}
    <ul class="stream-list">
      {% for post in postslist %}
        <li class="stream-item">
          <a href="{{ post.url }}" class="stream-link">{{ post.data.title }}</a>
          <p class="stream-meta">{{ post.date | readableDate }}</p>
          <p class="stream-excerpt">
            {{ (post.data.description or post.templateContent | striptags) | truncate(320, true, "…") }}
          </p>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No posts yet.</p>
  {% endif %}
</section>
