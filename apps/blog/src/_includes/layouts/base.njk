{#
  Base layout for all public website pages.
  Keeps navigation minimal and content typography-forward.
#}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="alternate" href="{{ metadata.feed.path }}" type="application/atom+xml" title="{{ metadata.title }}" />
  </head>
  <body>
    <header class="site-header">
      <nav class="site-nav" aria-label="Main navigation">
        <a href="/" class="site-name">{{ metadata.title }}</a>
        <div class="nav-links">
          <a href="/" {% if page.url == "/" %}aria-current="page"{% endif %}>Home</a>
          <a href="/blog/" {% if page.url == "/blog/" %}aria-current="page"{% endif %}>Blog</a>
          <a href="/docs/" {% if page.url == "/docs/" %}aria-current="page"{% endif %}>Docs</a>
          <a href="/changelog/" {% if page.url == "/changelog/" %}aria-current="page"{% endif %}>Changelog</a>
        </div>
      </nav>
    </header>

    <main class="site-main">
      {{ content | safe }}
    </main>

    <footer class="site-footer">
      <p>&copy; {{ metadata.title }} {{ currentYear }}</p>
    </footer>
  </body>
</html>
